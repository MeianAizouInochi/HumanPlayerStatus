<Window
    x:Class="HumanPlayerStatusApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HumanPlayerStatusApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:HumanPlayerStatusApp.Views"
    Title="Human Player Status Window"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid x:Name="MainWindowGrid_1">

        <Grid.RowDefinitions>

            <!--  Title Row  -->
            <RowDefinition Height="auto" />

            <!--  Player Name And Pic Row  -->
            <RowDefinition Height="auto" />

            <!--  Info Row  -->
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding WindowTitle}" />

        <Grid x:Name="ChildGrid_1" Grid.Row="1">

            <Grid.ColumnDefinitions>

                <!--  Circular Pic Column  -->
                <ColumnDefinition Width="auto" />

                <!--  Pic Label Column  -->
                <ColumnDefinition Width="auto" />

                <!--  Player Name Coumn  -->
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" />

            <Label Grid.Column="1" Content="{Binding HumanPlayerNameLabel}" />

            <TextBlock Grid.Column="2" Text="{Binding HumanPlayerName}" />

        </Grid>

        <Grid x:Name="ChildGrid_2" Grid.Row="2">

            <Grid.ColumnDefinitions>

                <!--  Navigation Menu Column  -->
                <ColumnDefinition Width="1*" />

                <!--  Actual Data Column  -->
                <ColumnDefinition Width="8*" />

            </Grid.ColumnDefinitions>


            <views:NavigationPane Grid.Column="0"/>

        </Grid>

    </Grid>

</Window>
